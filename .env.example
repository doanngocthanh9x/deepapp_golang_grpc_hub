# GitHub Container Registry Configuration
# Copy this file to .env and fill in your values

# GitHub username (for docker login)
GITHUB_USERNAME=your-github-username

# GitHub Personal Access Token with read:packages permission
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx

# Repository name (owner/repo)
GITHUB_REPOSITORY=doanngocthanh9x/deepapp_golang_grpc_hub

# Image tag to deploy
# Options: main, develop, latest, or specific commit SHA like main-abc123
IMAGE_TAG=main

# Deployment options
# All-in-one: Single container with all services
# Microservices: Separate container per service
DEPLOYMENT_MODE=all-in-one

# Ports (only for all-in-one, microservices use defaults)
GRPC_PORT=50051
WEBAPI_PORT=8081
